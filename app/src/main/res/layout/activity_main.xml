<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pan.myappone.MainActivity">

    <TextView
        android:textSize="20dp"
        android:gravity="center"
        android:text="简易计算器"
        android:background="#ff2679ca"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="2dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:textSize="35dp"
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

    <EditText
        android:layout_weight="1"
        android:textSize="30dp"
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <GridLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:columnCount="4"
        android:rowCount="5">



        <Button
            android:id="@+id/bt_clear_away"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="清除"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_clear"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="删除"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_div"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="/"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_mul"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="*"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_7"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_8"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_9"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_sub"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_addition"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="+"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_equ"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:text="="
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_per"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="%"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/bt_0"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_dot"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="."
            android:textSize="20dp" />


    </GridLayout>

</LinearLayout>
